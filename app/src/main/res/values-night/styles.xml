<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="isLightTheme">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:statusBarColor">@color/colorDarkMode</item>
        <item name="android:navigationBarColor">@color/colorDarkMode</item>
        <item name="android:windowBackground">@color/colorDarkMode</item>

        <item name="colorPrimary">@color/colorDarkMode</item>
        <item name="colorPrimaryDark">@color/colorDarkMode</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:background">#2e2f33</item>
        <item name="android:backgroundTint">#2e2f33</item>
    </style>

</resources>
